{
    "name": "toastler",
    "type": "module",
    "version": "0.0.4",
    "packageManager": "pnpm@7.26.1",
    "description": "",
    "author": "Anton Ã–dman <anton.odman@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/banjo/toastler#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/banjo/toastler.git"
    },
    "bugs": "https://github.com/banjo/toastler/issues",
    "keywords": [],
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.cjs",
            "import": "./dist/index.mjs"
        }
    },
    "main": "./dist/index.mjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "typesVersions": {
        "*": {
            "*": [
                "./dist/*",
                "./dist/index.d.ts"
            ]
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "unbuild",
        "dev": "unbuild --stub",
        "lint": "eslint .",
        "prepublishOnly": "nr build",
        "release": "bumpp && npm publish",
        "start": "esno src/index.ts",
        "test": "vitest --watch=false",
        "test:dev": "vitest",
        "typecheck": "tsc --noEmit",
        "format": "npx prettier --write .",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@antfu/ni": "^0.19.0",
        "@banjoanton/utils": "^0.1.17",
        "@types/node": "^18.11.18",
        "bumpp": "^8.2.1",
        "eslint": "^8.32.0",
        "esno": "^0.16.3",
        "husky": "^8.0.3",
        "pnpm": "^7.26.1",
        "prettier": "^2.8.3",
        "typescript": "^4.9.4",
        "unbuild": "^1.1.1",
        "vite": "^4.0.4",
        "vitest": "^0.28.3"
    }
}
